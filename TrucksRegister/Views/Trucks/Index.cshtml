@model IEnumerable<TrucksRegister.Models.Trucks>

@{
    ViewData["Title"] = "Index";
}

<p style="text-align: right">
    <a asp-action="Create" class="btn btn-primary">Adicionar Caminhão</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th style="text-align: center">
                Modelo
            </th>
            <th style="text-align: center">
                Ano / Fabricação
            </th>
            <th style="text-align: center">
                Ano / Modelo
            </th>
            <th style="text-align: center">
                Ações
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td style="text-align: center">
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td style="text-align: center">
                @Html.DisplayFor(modelItem => item.ManufacturingYear)
            </td>
            <td style="text-align: center">
                @Html.DisplayFor(modelItem => item.ModelYear)
            </td>
            <td style="text-align: center">
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" class="btn btn-secondary" asp-route-id="@item.Id">Detalhes</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
